}
.fukuan .quxiao{
  margin-right: 20rpx;
}
.fukuan .quxiao button{
  width: 150rpx;
  height: 50rpx;
  background: #fff;
  color: #333;
  font-size: 14px;
  padding: 0;
  line-height: 50rpx;
}
.fukuan .payed button{
  width: 150rpx;
  height: 50rpx;
  background: #fff;
  color: #1aad19;
  font-size: 14px;
  padding: 0;
  line-height: 50rpx;
}
.headesel .hed.actived text{
  color: #ff5858;
}