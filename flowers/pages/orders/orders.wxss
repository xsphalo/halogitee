/* pages/orderdetails/orderdetails.wxss */
.headesel {
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.headesel view.hed text {
  font-size: 16px;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.headesel view.hed {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.actived text:last-child.botline {
  background: #ff5858;
  width: 26rpx;
  height: 6rpx;
  border-radius: 3px 3px;
}
.orderdetails {
  background: #f2f2f2;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.orderdetails .oderimg image {
  width: 190rpx;
  height: 190rpx;
}

.odername {
  width: 310rpx;
}

.odername text:first-child {
  font-size: 13px;
  color: #000;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
}

.odername text:last-child {
  font-size: 12px;
  color: #999;
}

.odername, .orderprice {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.orderprice {
  text-align: right;
}

.orderprice text:first-child {
  font-size: 14px;
  color: #000;
}

.orderprice text:nth-child(2) {
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}

.orderprice text:last-child {
  font-size: 12px;
  color: #999;
}

.odername text
.oderprice text {
  display: block;
}
.henhai image{
  width: 13rpx;
  height: 22rpx;
}
.henhai view{
  font-size: 14px;
  color: #666;
}
.daifua{
  font-size: 13px;
  color: #1aad19;
}
.haime{
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding: 0 20rpx;
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
}
.henhai{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.henhai view{
  margin-right: 10rpx;
}
.paying{
  background: #fff;
  border-bottom: 1px solid #e6e6e6;
  padding-right: 20rpx;
  text-align: right;
  height: 80rpx;
  line-height: 80rpx;
}
.paying view{
  color: #333;
  font-size: 12px;
  display: inline-block;
  
}
.paying view:first-child{
  margin-right: 10rpx;
}
.paying view text{
  font-size: 16px;
}
.fukuan{
  padding-right: 20rpx;
  background: #fff;
