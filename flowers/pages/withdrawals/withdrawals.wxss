.tixianjin{
  background: #fff;
  height: 210rpx;
  padding: 0 30rpx;
  padding-top: 20rpx;
}
.tixianjin text{
  display: block;
}
.tixianjin text:first-child{
  font-size: 16px;
  font-weight: 500;
  color: #333;
  
}

.tixianjin .tiarea{
  border-bottom: 1px solid #ddd;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tixianjin view.tiarea{
  height: 88rpx;
}
.tixianjin .tiarea text{
  font-size: 28px;
  color: #333;
  font-weight: 500;
}
.tixianjin view input{
  color: #333;
  font-size: 28px;
  margin-left: 10rpx;
}
.keti{
  margin-top: 10rpx;
}
.keti text:first-child{
  font-size: 14px;
  font-weight: 500;
  color: #999;
  display: inline-block;
  margin-right: 10rpx;
}
.keti text:last-child{
  font-size: 18px;
  font-weight: 500;
  color: #ff1111;
  display: inline-block;
}
.kaihumsg{
  background: #fff;
  padding: 0 30rpx;
  margin-top: 30rpx;
  height: 270rpx;
}
.kaihumsg view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd;
  height: 88rpx;
}
.kaihumsg view:last-child{
  border-bottom: none;
}
.kaihumsg view text{
  font-size: 16px;
  color: #333;
}
.kaihumsg view input{
  font-size: 16px;
  color: #000;
  width: 520rpx;
}
.arrim{
  text-align: center;
  padding:30rpx;
}
.arrim text{
  font-size: 14px;
  color: #999;
}
.confirms{
