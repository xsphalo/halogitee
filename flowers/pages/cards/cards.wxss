/* pages/coupon/coupon.wxss */

.headesel {
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 90rpx;
}

.headesel view.hed text {
  font-size: 16px;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.headesel view.hed {
  display: flex;
  align-items: center;
  flex-direction: column;
}



.botline {
  background: #ff5858;
  width: 26rpx;
  height: 6rpx;
  border-radius: 3px 3px;
}

.coupons {
  height: 100%;
  padding: 20rpx;
}

.coupuse {
  margin-bottom: 20rpx;
  width: 670rpx;
  height: 200rpx;
  background: #ff9e9e;
  border-radius: 5px;
  padding: 0 20rpx;
  padding-top: 40rpx;
}

.youhuitop {
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-right: 20rpx;
  padding-left: 30rpx;
  margin-bottom: 80rpx;
}

.coup {
  color: #fff;
  font-size: 16px;
  font-weight: 600;
}

.prices {
  color: #fff;
  font-size: 24px;
  font-weight: 600;
  position: absolute;
  right: 230rpx;
  top: 26rpx;
}

.juan {
  text-align: right;
}

.juan view {
  color: #ff5858;
}

.juan view:first-child {
  font-size: 18px;
  font-weight: 700;
}

.juan view:last-child {
  font-size: 12px;
  font-weight: 500;
}

.botompon {
  display: flex;
  justify-content: space-between;
}

.botompon view:first-child {
  font-size: 12px;
  color: #666;
}

.botompon view:last-child {
  font-size: 10px;
  color: #ff5858;
}
.headesel .hed.actived text{
  color: #ff5858;
}
/* ..........阴影.... */

.shade {
  background-color: #000;
  position: fixed;
  z-index: 49;
  width: 100%;
  height: 100%;
  opacity: 0.4;
  margin: 0;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.particulars {
  height: 250rpx;
  width: 420rpx;
  border: 0;
  z-index: 50;
  position: fixed;
  background: #fff;
  bottom: 46%;
  left: 22%;
  border-radius: 10px;
}

.product-img {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.product-img text {
  display: block;
  font-size: 16px;
  color: #666;
}

.product-img .imgbg {
  width: 100rpx;
  height: 100rpx;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
}
