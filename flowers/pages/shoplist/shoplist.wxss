/* pages/shoplist/shoplist.wxss */
.shophead{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  align-items: center;
  background: #fff;
  height: 90rpx;
}
.shophead .checkbox{
  font-size: 16px;
  color: #333;
}
.checkbox checkbox{
  display: none;
}
.shophead view{
  color: #333;
  font-size: 16px;
  padding: 20rpx;
}
.checkbox image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.producmsg{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}
.products{
  height: 160rpx;
  padding: 0 10rpx;
}
.products image{
  width: 140rpx;
  height: 140rpx;
}
.prodeat{
  width: 320rpx;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
}
.prodeat .procart image{
  width: 56rpx;
  height: 56rpx;
}
.prodea-msg{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.prodea-msg view:first-child{
  font-size: 14px;
  color: #333;
}
.prodea-msg view:last-child{
  font-size: 16px;
  color: #ff5858;
}
.prodea-msg view:last-child text{
  font-size: 10px;
  color: #999;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.prodea-msg view:nth-child(2){
  font-size: 10px;
  color: #999;
}
.produs{
  padding: 0 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  height: 180rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.counts{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.counts image{
  width: 46rpx;
  height: 46rpx;
  display: block;
}
.counts text{
  width: 45rpx;
  text-align: center;
  font-size: 18px;
  color: #ff5858;
  display: block;
  margin: 0 20rpx;
}

.confirms{
  background: #fff;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #e6e6e6;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  right: 0;
  bottom: 0;
}
.conumbers view{
  font-size: 16px;
  color: #333;
  font-weight: 500;
}
.conumbers view text{
  color: #ff5858;
}
.confirms button{
  background: #ff5858;
  color: #fff;
  border: none;
  height: 100%;
  width: 200rpx;
  border-radius: 0;
  margin: 0;
  margin-left: 20rpx;
}
.conumbers view:last-child{
  font-size: 12px;
}
.conumbers{
  text-align: right;
}

.delets{
  background: #fff;
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  left: 0;
  bottom:0;
}
.delets button{
  background: #ff5858;
  color: #fff;
  height: 100%;
  width: 200rpx;
  border-radius: 0;
  margin: 0;
}
.confirmdelet{
  text-align: center;
}
.confirmdelet view:first-child{
  font-size: 14px;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
}
.choice{
  display: flex;
  justify-content: space-between;
}
.choice view button{
  background: #fff;
  border-radius: 0;
  width: 230rpx;
  border: none;
  line-height: 100rpx;
}
.choice view:first-child button {
  color: #333;
  font-size: 16px;
}
.choice view button{
  color: #1aad19;
  font-size: 16px;
}
.choice{
  height: 100rpx;
}
.choice view button,
.choice view{
  height: 100%;
}
.flowarea{
  width: 460rpx;
  height: 200rpx;
  border:0;
  z-index: 50;
  position: fixed;
  background: #fff;
  bottom: 50%;
  left: 20%;
  border-radius: 5px 5px;
}
.shophead checkbox-group{
  display: flex;
  align-items: center;
}
.shophead checkbox-group text{
  font-size: 16px;
  color: #333;
}
.shophead checkbox-group icon{
  transform: scale(.8)
}
.produs checkbox-group icon{
  transform: scale(.8)
}
.bgcol{
  margin: 0 auto;
 
  text-align: center;
  height: 1109rpx;
}
.bgcol image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 320rpx;
}
.bgcol text{
  display: block;
  font-size: 16px;
  color: #cdcdcd;
}