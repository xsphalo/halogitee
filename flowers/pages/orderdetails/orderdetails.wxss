/* pages/order-details/order-details.wxss */

.serdetails {
  background: #fff;
  padding-left: 30rpx;
  height: 109rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #e6e6e6;
}

.bgfff {
  background: #fff;
}

.dels {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.dels image {
  width: 26rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.dels text {
  color: #1aad19;
  font-size: 14px;
  font-weight: 500;
  display: block;
}
.dels text:last-child{
  color: #999;
}


.disright {
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-right: 60rpx;
  height: 109rpx;
}
.botline{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-left: 50rpx;
  padding: 0 10rpx;
  padding-left: 50rpx;
}
.botline .dots{
  width: 10rpx;
  height: 10rpx;
  background: #1aad19;
  border-radius: 50%;
  margin: 0 15rpx;
  
}
.botline .dots:last-child{
  margin-left: 0;
  background: #999;
}
.botline .lines:nth-child(6){
  background: #999;
}
.botline .lines{
  width: 100rpx;
  height: 2rpx;
  background: #1aad19;
}
.botline view image{
  width: 22rpx;
  height: 22rpx;
}
.maijia {
  position: relative;
  margin-top: 0rpx;
  background: #fff;
  padding: 30rpx 30rpx 30rpx 76rpx;
}

.maijia .adres {
  position: absolute;
  left: 30rpx;
  top: 30%;
}

.maijia .adres image {
  width: 28rpx;
  height: 30rpx;
}

.maijia text {
  font-size: 12px;
  color: #666;
}

.msguser text {
  display: block;
}

.msguser {
  display: flex;
  justify-content: space-between;
}


.orderdetails {
  background: #f2f2f2;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.orderdetails .oderimg image {
  width: 190rpx;
  height: 190rpx;
}

.odername {
  width: 310rpx;
}

.odername text:first-child {
  font-size: 13px;
  color: #000;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
}

.odername text:last-child {
  font-size: 12px;
  color: #999;
}

.odername, .orderprice {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.orderprice {
  text-align: right;
}

.orderprice text:first-child {
  font-size: 14px;
  color: #000;
}

.orderprice text:nth-child(2) {
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}

.orderprice text:last-child {
  font-size: 12px;
  color: #999;
}

.odername text
.oderprice text {
  display: block;
}
.payarea{
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 156rpx;
  align-items: center;
}
.payarea view text{
  color: #999;
  font-size: 12px;
  font-weight: 500;
  display: block;
  margin: 7rpx 0;
}
.payarea view text.pays{
  color: #333;
}
.payarea view:last-child{
  text-align: right;
}
.orderpage{
  background: #fff;
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.orderpage text{
  display: block;
  font-size: 12px;
  color: #999;
  margin: 7rpx 0;
}
.bottmqiu{
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 200rpx;
}
.bottmqiu view{
  height: 50rpx;
}
.bottmqiu view button{
  width: 150rpx;
  height: 50rpx;
  background: #fff;
  color: #000;
  font-size: 12px;
  line-height: 50rpx;
  padding: 0;
}
.bottmqiu view:last-child button{
  color: #1aad19;
}